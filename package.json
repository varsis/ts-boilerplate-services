{
  "name": "ts-boilerplater-services",
  "version": "1.0.0",
  "description": "Microservice boilerplate using typescript and express",
  "main": "out/app.js",
  "scripts": {
    "prebuild": "rm -rf ./out",
    "build": "npm run tsc",
    "postbuild": "cp -rf ./src/cfg/defaults/ ./out/cfg/defaults/",
    "coverage": "npm run test-cov && npm run test-remap",
    "postinstall": "npm run build",
    "lint": "tslint ./src/*/**.ts",
    "test": "mocha --reporter spec --check-leaks --bail test/",
    "tsc": "tsc --project tsconfig.json",
    "tsc:w": "tsc -w",
    "start": "concurrently \"npm run tsc:w\" \"nodemon out/app.js\""
  },
  "author": "Chris Pavlicek",
  "license": "ISC",
  "dependencies": {
    "a": "^2.1.1",
    "blocked": "^1.2.1",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-session": "^1.14.2",
    "http-status-codes": "^1.3.0",
    "menna": "^1.0.3",
    "method-override": "^2.3.6",
    "mysql": "^2.15.0",
    "pg": "^7.3.0",
    "ramda": "^0.24.1",
    "reflect-metadata": "^0.1.10",
    "sequelize": "^4.13.17",
    "sequelize-typescript": "^0.5.0",
    "swagger-express-middleware": "^1.0.0-alpha.12",
    "swagger-ui-express": "^2.0.8",
    "ts-express-decorators": "https://github.com/varsis/ts-express-decorators",
    "typescript": "^2.5.3"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.37",
    "@types/node": "^8.0.34",
    "@types/ramda": "^0.24.17",
    "@types/swagger-schema-official": "^2.0.6",
    "@types/winston": "^2.3.6",
    "concurrently": "^3.1.0",
    "nodemon": "^1.11.0",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.3.0",
    "tslint-config-airbnb-base": "^0.1.0",
    "tslint-eslint-rules": "^4.1.1"
  },
  "nodemonConfig": {
    "ignore": [
      "out/swagger.json"
    ],
    "delay": "2500"
  }
}
