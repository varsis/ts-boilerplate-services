{
  "name": "ts-boilerplater-services",
  "version": "1.0.0",
  "description": "Microservice boilerplate using typescript and express",
  "main": "out/app.js",
  "scripts": {
    "build": "npm run tsc",
    "coverage": "npm run test-cov && npm run test-remap",
    "postinstall": "npm run build",
    "lint": "tslint ./src/*/**.ts",
    "test": "mocha --reporter spec --check-leaks --bail test/",
    "tsc": "tsc --project tsconfig.json",
    "tsc:w": "tsc -w",
    "start": "concurrently \"npm run tsc:w\" \"nodemon out/app.js\""
  },
  "author": "Chris Pavlicek",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "http-status-codes": "^1.3.0",
    "menna": "^1.0.3",
    "method-override": "^2.3.6",
    "mysql": "^2.14.1",
    "ramda": "^0.24.1",
    "reflect-metadata": "^0.1.10",
    "ts-express-decorators": "2.0.0",
    "typeorm": "0.1.0-alpha.50",
    "typescript": "^2.5.3"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.37",
    "@types/node": "^8.0.13",
    "@types/ramda": "^0.24.16",
    "@types/winston": "^2.3.6",
    "concurrently": "^3.1.0",
    "nodemon": "^1.11.0",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.3.0",
    "tslint-config-airbnb-base": "^0.1.0",
    "tslint-eslint-rules": "^4.1.1"
  }
}
